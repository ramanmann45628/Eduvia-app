<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fees Management"
                android:textColor="#313131"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnCreateInvoice"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:backgroundTint="#313131"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="Create Invoice"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- Welcome Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fee_total_card"
            android:backgroundTint="#291E87E4"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome ! Raman Mann"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvOverallAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Overall Amount Received"
                android:textColor="#666666"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAmountHidden"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="*****"
                    android:textColor="@color/tt_primary"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnShowAmount"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:backgroundTint="@color/tt_primary"
                    android:layout_marginLeft="30dp"
                    android:text="Show"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Here you can track your fee payments and \ndue dates"
                android:textColor="#555555"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- This Month Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="This Month"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Fees Cards Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- Total Fees -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/fee_card_bg"
                android:backgroundTint="#301EE4D0"
                android:paddingVertical="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Fees"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvTotalFees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50,000"
                    android:textStyle="bold"
                    android:textColor="#1EE5E2"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Pending Fees -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/fee_card_bg"
                android:backgroundTint="#30E23835"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending Fees"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvPendingFees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25,000"
                    android:textStyle="bold"
                    android:textColor="#E53935"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Received Fees -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/fee_card_bg"
                android:backgroundTint="#3B41E447"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Received Fees"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvReceivedFees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10,000"
                    android:textStyle="bold"
                    android:textColor="#43A047"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="178dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/input_background"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="8dp"
                android:hint="Search here..."
                android:padding="12dp"
                android:textColorHint="#A0A0A0"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/filterButton"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:scaleType="centerInside"
                android:background="#fff"
                android:src="@drawable/sort"
                android:contentDescription="Filter options" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Showing All Student"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#313131" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/studentRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


    </LinearLayout>
</androidx.core.widget.NestedScrollView>
