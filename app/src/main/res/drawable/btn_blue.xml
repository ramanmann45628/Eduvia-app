<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient colors -->
    <gradient
        android:startColor="#0645A0"
        android:endColor="#3388B6"
        android:angle="45" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional padding inside the button -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
